<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Condition=" '$(Platform)' == 'x64' ">
    <AssemblyNamePostfix>64</AssemblyNamePostfix>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Platform)' == 'x86' ">
    <AssemblyNamePostfix>32</AssemblyNamePostfix>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>net481</TargetFramework>
    <Configuration Condition=" '$(Configuration)' == '' ">netfx4-Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">x64</Platform>
    <OutputType>Library</OutputType>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'netfx4-Release|x64'">
    <OutputPath>..\Build\$(Configuration)\x64\</OutputPath>
    <DefineConstants>TRACE;NET4</DefineConstants>
    <DocumentationFile></DocumentationFile>
    <Optimize>true</Optimize>
    <CodeAnalysisRuleSet>AllRules.ruleset</CodeAnalysisRuleSet>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'netfx4-Debug|x64'">
    <DebugSymbols>true</DebugSymbols>
    <OutputPath>..\Build\$(Configuration)\x64\</OutputPath>
    <DefineConstants>DEBUG;TRACE;NET4</DefineConstants>
    <DocumentationFile></DocumentationFile>
    <CodeAnalysisRuleSet>AllRules.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'netfx4-Release|x86'">
    <OutputPath>..\Build\$(Configuration)\x86\</OutputPath>
    <DefineConstants>TRACE;NET4</DefineConstants>
    <DocumentationFile></DocumentationFile>
    <Optimize>true</Optimize>
    <CodeAnalysisRuleSet>AllRules.ruleset</CodeAnalysisRuleSet>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'netfx4-Debug|x86'">
    <DebugSymbols>true</DebugSymbols>
    <OutputPath>..\Build\$(Configuration)\x86\</OutputPath>
    <DefineConstants>DEBUG;TRACE;NET4</DefineConstants>
    <DocumentationFile></DocumentationFile>
    <CodeAnalysisRuleSet>AllRules.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>
  <PropertyGroup>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>
  <PropertyGroup>
    <AssemblyOriginatorKeyFile>StrongName.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\EasyHook\EasyHook.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="UnmanagedExports">
      <Version>1.2.7</Version>
    </PackageReference>
  </ItemGroup>
  <PropertyGroup>
    <PostBuildEvent Condition="'$(Platform)' == 'x64'">C:\Windows\System32\xcopy.exe "$(TargetDir)$(AssemblyName).*" "$(TargetDir)..\x86" /Y</PostBuildEvent>
    <PostBuildEvent Condition="'$(Platform)' == 'x86'">C:\Windows\System32\xcopy.exe "$(TargetDir)$(AssemblyName).*" "$(TargetDir)..\x64" /Y</PostBuildEvent>
  </PropertyGroup>
</Project>